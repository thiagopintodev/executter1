<% content_for :output_panel do %>

<ul class="menu-add">

  <li class="user"><%= @user.username %></li>
  <% if @r %>
    <li class="mais">
      <%= link_to @main_button[:text], "#", :class=>"clickable", 'data-url'=>ajax_user_show_relation_path(@main_button[:params]) if @main_button %>
    </li>
    
    <% if @r.is_blocked %>
      <li class="topico"><img src="/images/layout/ok.jpg" width="17" height="15" alt="ok" /> U B-in Block'd</li>
    <% else %>
    
      <% if @r.is_follower %>
        <li class="topico"><img src="/images/layout/ok.jpg" width="17" height="15" alt="ok" /> Following</li>
      <% end %>
      
      <% if @r.is_friend %>
        <li class="topico"><img src="/images/layout/ok.jpg" width="17" height="15" alt="ok" /> Friend</li>
      <% elsif @r.is_followed %>
        <li class="topico"><img src="/images/layout/ok.jpg" width="17" height="15" alt="ok" /> Followed</li>
      <% end %>
      
    <% end %>
  <% end %>
  
</ul>


  <% if @r %>

  
<div class="chama-menu">
	<img src="/images/layout/Menu.gif" width="16" height="16" />
	<a href="#">
		<img src="/images/layout/arrow_icon.png" width="16" height="16" />
  </a>
</div>

<ul id="menu-estilos">
  <% if @r.is_blocker %>

  
    <li><a href="#" class="clickable"
      data-url="<%= ajax_user_show_relation_path({:p1=>'block', :p2=>0}) %>">
      <img src="/images/layout/0_Unblock.gif" width="16" height="16" />
      <%= t "profile.button_block2", :username=> @user.username %>
    </a></li>
  <% else %>
    <li><a href="#" class="clickable"
      data-url="<%= ajax_user_show_relation_path({:p1=>'block', :p2=>1}) %>">
      <img src="/images/layout/0_Block.gif" width="16" height="16" />
      <%= t "profile.button_block1", :username=> @user.username %>
    </a></li>
  <% end %>
  <% if @r.is_follower %>

  
    <% @user.subjects.each do |subject| %>
      <% if @r.ignoring? subject.id %>


<%= content_tag :li,
  link_to(raw("<img src='/images/layout/0_Follow.gif' /> watch #{subject.name}"), "#", :class=>"clickable",
    'data-url'=>ajax_user_show_relation_path({:p1=>'subject', :p2=>subject.id})) %>

      <% else %>

<%= content_tag :li,
  link_to(raw("<img src='/images/layout/0_Block.gif' /> ignore #{subject.name}"), "#", :class=>"clickable",
    'data-url'=>ajax_user_show_relation_path({:p1=>'subject', :p2=>subject.id})) %>

      <% end %>
    <% end %>

    
  <% end %>
</ul>

