<% content_for :output_sidebar do %>
  <li><a href="#" class="nao-clique">
    <span><%= @user.count_of_followers %></span>
    <span class="label"><%= t "application.words.followers" %></span>
  </a></li>
  <li><a href="#" class="nao-clique">
    <span><%= @user.count_of_followings %></span>
    <span class="label"><%= t "application.words.followings" %></span>
  </a></li>
  <li><a href="#" class="nao-clique">
    <span><%= @user.count_of_friends %></span>
    <span class="label"><%= t "application.words.friends" %></span>
  </a></li>
  <li><a href="#" class="nao-clique">
    <span><%= @user.count_of_blockings %></span>
    <span class="label">bloqueando</span>
  </a></li>
  <li><a href="#" class="nao-clique">
    <span><%= @user.count_of_blockers %></span>
    <span class="label">bloqueados</span>
  </a></li>
<% end %>


<% r = raw escape_javascript(yield :output_panel) %>
$("#user-following .in").hide().removeClass("loading").html("<%= r %>").fadeIn();

<% r = raw escape_javascript(yield :output_sidebar) %>
$("#sidebar .user_counters").removeClass("loading").html("<%= r %>");


