<% @user.website = h("http://#{@user.website}") if  !@user.website.blank? && @user.website[0..4]!='http' %>

<div id="sidebar">

  <div id="user-perfil">
    <%= profile_field(@user, "Name", 'full_name') %>
    <%= profile_field(@user, "Location", 'local') %>
    <%= profile_field(@user, "Birthday", 'birth', @user.birth_to_s) if @user.birth? %>
    <%= profile_field(@user, "Gender", 'gender_to_s', @user.gender_to_s) if @user.gender? %>
    <%= profile_field(@user, "Web", 'website', link_to(@user.website, @user.website)) unless @user.website.blank? %>
    <%= profile_field(@user, "Bio", 'description') %>
    <% if current_user && current_user.admin? %>
    
    <p style="margin-top:20px"><strong>Admin </strong> </p>
    <%= profile_field(@user, "New", 'created_at', l(@user.created_at) ) %>
    <%= profile_field(@user, "In", 'last_sign_in_at', l(@user.last_sign_in_at) ) %>
    
    <%= profile_field(@user, "Logins", 'sign_in_count' ) %>
    <%= profile_field(@user, "E-mail", 'email' ) %>
    
    <% end %>
