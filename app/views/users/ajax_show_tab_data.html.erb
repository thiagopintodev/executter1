<% if @posts.length > 0 %>
<div class="pack show-more-button" style="display:none">
<% @posts.each do |post| %>
<div class="pack" style="display:none">
<ul class="lista-executs post" data-id="<%= post.id %>">
  <li class="execute">
    <p><%= my_post_links h(post.body) %></p>
  </li>

<%= my_post_actions post %>



<% if post.links %>
  <% post.links.each do |x| %>
    <% if x.ends_with? '.jpg' %>

<li class="foto">
  <%= link_to image_tag(x, :width=>200), post %>
  <%if false%>
  <%= link_to image_tag(x, :style=>"width:200px"), x, :target=>"_blank" %>
  <span><%= link_to "Baixar arquivo original", x, :target=>"_blank" %></span><br/>
  <%end%>
</li>

    <% else %>
      
<li class="hora" style="clear:both">
  <span>
    <img border="0" width="16" height="16" alt="Name" src="/images/layout1/anexo/_attach.gif">
    <%= link_to "#{request.env['HTTP_HOST']}#{x}", x, :target=>"_blank" %>
  </span>
</li>

    <% end %>
  <% end %>
<% end %>

  

  
  <li class="hora" style="clear:both">
      <%= link_to "#{time_ago_in_words post.created_at} - #{l post.created_at, :format => :short}", post %>
  </li>

</ul>
</div>
<% end %>
</div>
<% end %>
<% if !params[:after] && @posts.length == Post::MY_LIMIT %>
  <div class="p-botao">
    <a id="btn-more" href="#" class="viewstack-ajax-trigger" style="display:none">More</a>
  </div>
<% end %>

