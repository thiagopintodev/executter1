<% if @posts.length > 0 %>
<div class="pack show-more-button" style="display:none">
<% @posts.each do |post| %>

  <ul class="lista-execute post" data-id="<%= post.id %>" <%= "style='border-top:1px solid #E2E2E2'" if @posts.first==post%>>
	  <li class="havatar">
	    <a href="/<%= post.user.username %>">
	      <img src="<%= post.user.read_photo.img.url(:sm) %>" alt="<%= post.user.username %>" border="0" />
	    </a>
	  </li>
    <li class="execute">
      <%= link_to post.user.username, profile_path(post.user.username) %>
	    <%= content_tag :span, post.user.full_name, :class=>:full_name %>
	    <%= content_tag :span, "#{t 'model.subject.model_name'}: #{post.subject.name}", :class=>:subject if post.subject %>
      <p><%= my_post_links h(post.body) %></p>
    </li>
      
<%= my_post_actions post %>


    <% at = post.read_first_post_attachments %>
    <% if at.file? %>
      <% if at.file_image? %>

<li class="foto">
  <%= link_to image_tag(at.file.url(:me)), post %>
  <%if false%>
  <%= link_to image_tag(at.file.url(:me)), at.file.url, :target=>"_blank" %>
  <span><%= link_to "Baixar arquivo original", at.file.url, :target=>"_blank" %></span><br/>
  <span>Format: <%= at.file_content_type %></span><br/>
  <span>Size: <%= number_to_human_size at.file_file_size %></span><br/>
  <span>Dimens√µes: <%= "#{at.file_width}x#{at.file_height}" %></span><br/>
  <%end%>
</li>

      <% else %>
      
<li class="hora" style="clear:both">
  <span>
    <img border="0" width="16" height="16" alt="Name" src="/images/layout1/anexo/_attach.gif">
    <%= link_to at.file_file_name, at.file.url, :target=>"_blank" %>
    (<%= number_to_human_size at.file_file_size %>)
  </span>
</li>

      <% end %>
    <% end %>

    <li class="hora" style="clear:both">
      <%= link_to "#{time_ago_in_words post.created_at} - #{l post.created_at, :format => :short}", post %>
    </li>
    
  </ul>
<% end %>
</div>
<% end %>
<% if !params[:after] && @posts.length == Post::MY_LIMIT %>
  <div class="p-botao">
    <a id="btn-more" href="#" class="viewstack-ajax-trigger" style="display:none">More</a>
  </div>
<% end %>
