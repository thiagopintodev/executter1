            <%= f.text_field :local %>
          </div>
        	<div class="normal">
          	<label>Fuso Horário:</label>
            <%= f.time_zone_select :time_zone %>
          </div>
        	<div class="normal">
          	<label>Web Site (URL):</label>
            <%= f.text_field :website %>
          </div>
        	<div class="normal">
          	<label>Descrição:</label>
              <%= f.text_field :description %>
            <span class="recuado">Fale de você em até 196 caracteres</span>
          </div>
        	<div class="normal">
          	<label>Idioma:</label>
              <%= select("user", "locale", User::LOCALES, {:blank => false}) %>
            <span class="recuado">Qual idioma você prefere usar no Executter?</span>
          </div>
          <div class="recuo">
		        <input type="submit" class="bt" value="Salvar" />
          </div>
        </div>

