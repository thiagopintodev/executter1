<% my_title "Sign IN" %>
<% my_css_files("login") %>

<div id="login">
	<h1><%= t 'view.sign_in.title' %></h1>
    <div class="singup">
      <%= t 'view.sign_in.subtitle' %>
      <%= link_to t("application.header.sign_up"), new_path %>
    </div>
    
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  		<div class="campos">
		      <% if flash[:alert] %>
         	  <div class="erro"><%= t 'view.sign_in.error' %></div>
         	<% end %>
         	
          <label><%= t 'view.sign_in.login' %></label>
              <%= f.text_field :email %>
          <%= f.label :password %>
          		<%= f.password_field :password %>
          		<div class="remember">
			        <%= f.check_box :remember_me, :class=>"check" %> 
              <span><%= t 'view.sign_in.remember_me' %></span>
          </div>
          <div class="bt-sign-in">
              <a href="#" class="form-submit"><%= t 'view.sign_in.submit' %></a>
              <input type="submit" style="display:none"/>
          </div>
          
          
          <%= render :partial => "devise/shared/links" %>

          
       </div>

       <div id="publicidade">
        <%= my_banner.link.blank? ? image_tag(my_banner.img.url) : link_to(image_tag(my_banner.img.url), my_banner.link) %>
       </div>

    <% end %>
</div>



