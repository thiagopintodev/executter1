<h1>Listing posts</h1>

<table width="100%">
  <tr>
    <th></th>
    <th>User</th>
    <th>IP</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td style="border-bottom:#333 dashed 1px"><%= image_tag post.img.url(:sm) if post.img? %></td>
    <td style="border:#333 dashed 1px"><%= link_to post.user.username, profile_path(post.user.username) %></td>
    <td style="border-bottom:#333 dashed 1px"><%= post.ip_address %></td>
    <td style="border:#333 dashed 1px"><%= post.body[0..20] %></td>
    <td style="border-bottom:#333 dashed 1px"><%= link_to 'Show', post %></td>
    <td style="border:#333 dashed 1px"><%#= link_to 'Edit', edit_post_path(post) %></td>
    <td><%#= link_to 'Destroy', post, :confirm => 'certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
